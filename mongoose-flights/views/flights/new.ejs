<a href="/tickets/new"	<%- title === 'Add Ticket' ? 'class="active"' : '' %>>NEW TICKET</a>
<a href="/flights" <%- title === 'All Flights' ? 'class="active"' : '' %>>ALL FLIGHTS</a>

<link rel='stylesheet' href='/stylesheets/style.css' />
  <form id="new-form" action="/flights" method="POST">
    <label><h4>Airline:</h4></label>
    <select name="airline">
      <option value="n/a"></option>
      <option value="American">American</option>
      <option value="Delta">Delta</option>
      <option value="Southwest">Southwest</option>
      <option value="United">United</option>
    </select>
    <label><h4>Airport:</h4></label>
    <select name="airport">
      <option value="DEN">DEN</option>
      <option value="ATL">ATL</option>
      <option value="DFW">DFW</option>
      <option value="LAX">LAX</option>
      <option value="SAN">SAN</option>
    </select>
    <label><h4>Flight Number:</h4></label>
    <input class="dropdown" type="number" name="flightNo">
    <label><h4>Departure:</h4></label>
    <input class="dropdown" type="datetime-local" name="departs">
    
    <input class="submit" type="submit" value="Add Flight">
  </form>
